<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Cooksmart3" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/blue_dark</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Customize overflow menu -->
        <item name="popupMenuBackground">@color/blue_dark</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Cooksmart</item>
        <item name="popupMenuStyle">@style/PopupMenu.Cooksmart</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu.Cooksmart</item>

        <!-- Set FAB background color globally -->
        <item name="colorSecondaryContainer">@color/blue_dark</item>
    </style>

    <style name="Theme.Cooksmart3" parent="Base.Theme.Cooksmart3" />

    <!-- Custom styles for popups and overflow menus -->
    <style name="PopupMenu.Cooksmart" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@color/blue_dark</item>
    </style>

    <style name="OverflowMenu.Cooksmart" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/blue_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>